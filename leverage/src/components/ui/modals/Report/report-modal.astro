---
import Modal from "@components/ui/modals/modal.astro";
import { supabase } from "@utils/supabaseClient";
---

<!-- Using the Modal Component -->
<Modal id="reportModal" hideButton={true}>
  <main slot="main">
    <h2 class="text-2xl font-bold mb-4">See how you rank</h2>
    <form id="reportForm" class="space-y-4">
      <div>
        <label for="name" class="block text-sm font-medium">Name</label>
        <input
          type="text"
          id="name"
          name="name"
          class="block w-full p-2 mt-1 border border-gray-300 rounded-md"
          required
          value=""
        />
      </div>
      <div>
        <label for="email" class="block text-sm font-medium">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          class="block w-full p-2 mt-1 border border-gray-300 rounded-md"
          required
          value=""
        />
      </div>
      <div>
        <label for="website" class="block text-sm font-medium"
          >Website URL</label
        >
        <input
          type="text"
          id="website"
          name="website"
          class="block w-full p-2 mt-1 border border-gray-300 rounded-md"
          required
          value=""
        />
      </div>
      <button
        type="submit"
        class="w-full px-4 py-2 bg-blue-600 text-white font-bold rounded-lg">
        Get Report
      </button>
    </form>
  </main>
</Modal>

